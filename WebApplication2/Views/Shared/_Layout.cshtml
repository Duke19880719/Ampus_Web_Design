<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ampus</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    @*<span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>*@
                </button>
          
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Ampus 訂單系統", "MainPageSearch", "MainPage", new { area = "" }, new { id = "li_id1", @class = "navbar-brand", style = "font-size:18px; font-weight:bold;color:#696969;" })</li>
                    <li>@Html.ActionLink("產品資訊", "ProductInformation", "MainPage", new { area = "" }, new { id = "li_id2", @class = "navbar-brand", style = "font-size:18px; font-weight:bold;color:#696969;" })</li>
                    <li>@Html.ActionLink("廠商登入", "Vendor_login", "MainPage", new { area = "" }, new { id = "li_id3", @class = "navbar-brand", style = "font-size:18px; font-weight:bold;color:#696969;" })</li>
                   
                </ul>
            </div>
        </div>
    </div>
    <div class="container" style="height:100%;width:100%;padding-right: 0px;
    padding-left: 0px;">

        @RenderBody()

    </div>
    <footer style="height:160px;">
        <p style="font-size:25px;color:white;text-align:center;"><b>AMPUS </b></p>
        <p style="font-size:20px;color:white;text-align:center;"><b>TECHNOLOGY CO.,LTD.</b></p>
        <div style="height:40px;width:65%;margin-right:17.5%;margin-left:17.5%;margin-top:5px;">
            <ul id="footer_ul">
                <li><label>電話 /</label><a href="tel:02-29999458">02-29999458</a></li>
                <li><label>地址 /</label><a href="https://www.google.com/maps?q=新北市三重區重新路五段609巷14號9樓之6">新北市三重區重新路五段609巷14號9樓之6</a></li>
                <li><label>服務信箱 /</label><a href="mailto:service@ampus.com.tw">service@ampus.com.tw</a></li>
                <li><label>維修信箱 /</label><a href="mailto:fix@ampus.com.tw">fix@ampus.com.tw</a></li>
            </ul>
        </div>
    </footer>


    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")



    @*<script src="~/Scripts/JavaScript_VendorLogin.js"></script>*@

    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
    @RenderSection("scripts", required: false)

    <script>
        $(li_id1).hover(function ()
        {
            $(li_id1).css({ "color": "aliceblue" });


        }, function () {
             $(li_id1).css({ "color": "#696969" });
        })
         $(li_id2).hover(function ()
        {
            $(li_id2).css({ "color": "aliceblue" });


         }, function () {
            $(li_id2).css({ "color": "#696969" });
        })
         $(li_id3).hover(function ()
        {
            $(li_id3).css({ "color": "aliceblue" });


        }, function () {
             $(li_id3).css({ "color": "#696969" });
         })

    </script>
</body>
</html>
